{
    "name": "francescomalatesta/costanzo",
    "type": "library",
    "description": "Tutte ttrontate.",
    "keywords": [
        "francescomalatesta",
        "costanzo"
    ],
    "homepage": "https://github.com/francescomalatesta/costanzo",
    "license": "MIT",
    "authors": [
        {
            "name": "Francesco Malatesta",
            "email": "hellofrancesco@gmail.com",
            "homepage": "http://francesco.codes",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "FrancescoMalatesta\\Costanzo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FrancescoMalatesta\\Costanzo\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
